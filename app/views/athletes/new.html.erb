<h1>Athletes New</h1>
<%= form_for @athletes do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :hair_color %>
  <%= f.text_area :hair_color %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :gender %>
  <%= f.text_area :gender %>

  <%= f.label :mortality %>
  <%= f.text_area :mortality %>

  <%= f.submit %>
<% end %>
